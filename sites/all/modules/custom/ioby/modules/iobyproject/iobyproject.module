/**
 * Implements hook_pager_alter().
 */
function iobyproject_page_alter(&$page) {

  // Add script to first page of project form to prevent duplicate submissions
  if (implode('/', arg()) == 'node/add/project-2') {
    drupal_add_js(drupal_get_path('module', 'iobyproject') . '/js/prevent-duplicate-save.js', array('scope' => 'header'));
  }

  $contexts = context_active_contexts();

  global $user;

  // if context is active for this page
  if (user_is_anonymous() || array_key_exists('hide_project_progress_bar', $contexts)) {
    return;
  }

  // load jquery cookie
  drupal_add_library('system', 'jquery.cookie');

  // load notification assets
  drupal_add_css(drupal_get_path('module', 'iobyproject') . '/css/ioby-project-notification.css', array('scope' => 'header'));
  drupal_add_js(drupal_get_path('module', 'iobyproject') . '/js/ioby-project-notification.js', array('scope' => 'header'));


  // Check if cookie isset
  if (!isset($_COOKIE['hide-project-notification'])) {

    // Query for any projects, in progresss
    $query = new EntityFieldQuery();
    $query->entityCondition('entity_type', 'node')
    ->entityCondition('bundle', 'project_2')
    ->propertyCondition('uid', $user->uid)
    ->propertyOrderBy('created', 'DESC')
    ->range(0, 1)
  // Run the query as user 1.
    ->addMetaData('account', user_load(1));

    $result = $query->execute();
    if (isset($result['node'])) {
      $project_nid = array_keys($result['node']);
      $project = node_load($project_nid[0]);

      if (isset($project->field_steps_complete['und'][0]['value'])) {
        $steps = $project->field_steps_complete['und'][0]['value'];
        if($steps == '0') {
          $message_text = t('Looks like you’re working on building your project page. All your information was saved. '.l(t('Pick up where you left off.'), 'node/'.$project_nid[0].'/edit'));
          // Render notification
          return drupal_add_region_content("subhead", theme('iobyproject-message', array('message' => $message_text)));
        }
      }

    }else{
         // check if user submitted idea_submitted
      $user = user_load($user->uid);

      if(!empty($user->field_idea_submitted)){

        $idea_submitted = $user->field_idea_submitted['und'][0]['value'];

        // get login count
        if (module_exists('ioby_user_login_count')) {
          $login_count = _get_user_login_count($user->uid);
          if($idea_submitted == '1' && $login_count >= '2'){
            $message_text = t('Thank you for submitting a project idea. While our team reviews your idea, take some time to read through the '.l("essentials", '/leader-toolkit/Overview').' for running a successful project or start '.l("building", '/node/add/project-2').' out your project page.');
            return drupal_add_region_content("subhead", theme('iobyproject-message', array('message' => $message_text)));
          }
        }
      }
    }
  }


}

// Fired by an update hook to record step completion for nodes predating the steps.
function iobyproject_update_complete_steps(){
  $launch_time = strtotime('May 24, 2017 11:59pm');
  $query = db_select('node','n');
  $query->fields('n',array('nid'))
        ->condition('n.created', $launch_time, '<')
        ->condition('n.type', 'project_2');
  $result = $query->execute();
  $nids = $result->fetchCol();

  //delete existing steps so we can add in one big insert query
  $query = db_delete('multistep')->condition('entity_type', 'node')
          ->condition('id', $nids, 'IN')
          ->execute();

  $common_value = array(
    'entity_type' => 'node',
    'status' => 'submitted'
  );

  $steps = array('group_about_step', 'group_project_about_step', 'group_project_budget_step', 'group_project_story_step', 'group_volunteers_giving_step');
  $values = array();
  foreach ($nids as $nid) {
    foreach ($steps as $step) {
      $value = $common_value;
      $value['step'] = $step;
      $value['id'] = $nid;
      $values[] = $value;
    }
  }

  $query = db_insert('multistep')->fields(array('entity_type', 'status', 'id', 'step'));
  foreach ($values as $record) {
    $query->values($record);
  }
  $query->execute();

}