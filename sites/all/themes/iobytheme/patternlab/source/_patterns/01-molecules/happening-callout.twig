<article class="happening-callout">
  <a href=".">
  <div class="happening-callout__image">
    <img src="../../images/happening-{{ post.id }}.png" />
  </div>
  <div class="happening-callout__box">
    <h3>{{ post.title }}</h3>
    <div class="happening-callout__writeup writeup">
      <p><em class="happening-callout__location location">{{ post.location }}</em>
      {{ post.writeup }}</p>
    </div>
    <div class="progress-bar">
      <span data-percent="{{ post.percent }}" class="progress-bar__number">{{ post.percent }}</span><span class="progress-bar__percent">%</span>
      <span class="progress-bar__funded uc">funded</span>
      <div class="progress-bar__bar">
        <div class="overlay"></div>
      </div>
      <div class="progress-bar__meta">
        <span class="amount-remaining">{{ post.amountRemaining }} still needed</span>
        {% if post.volunteers %}
          <span class='volunteers'> + Volunteers </span>
        {% endif %}

        {% if post.daysRemaining %}        
        <span class="days-remaining">{{ post.daysRemaining }} days to go</span>
        {% endif %}
      </div>
    </div>
  </div>
  </a>
</article>